%div.page_container
	%div.weather_container
		%h1
			%div{class: "hide", id: "sf_text"}
				= @sf_text
			%div{id: "nyc_text"}
				= @nyc_text
		%div.button_container
			%button{class: "button blue", :onclick => "toggleBetween('nyc_text', 'sf_text')"}
				= "Client-Side Toggle"
	%div.weather_container
		%h1
			%div{id: "nyc_text"}
				= @nyc_text
		%div.button_container
			%button{class: "button green", :onclick => "toggleAjax('nyc_text')"}
				= "AJAX Toggle"
	%div.weather_container
		%h1
			= @nyc_text
		%div.button_container
			%button.button.yellow
				= "Server-Side Toggle"

